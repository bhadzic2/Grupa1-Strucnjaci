@model IEnumerable<SpaceCat.Opcija>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TextOpcije)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GlasoviOpcije)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdAnkete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TextOpcije)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GlasoviOpcije)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdAnkete)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdOpcije">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdOpcije">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdOpcije">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
